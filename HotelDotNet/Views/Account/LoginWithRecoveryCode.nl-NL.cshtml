@model LoginWithRecoveryCodeViewModel
@{
    ViewData["Title"] = "Herstelcode verificatie";
}

<h2>@ViewData["Title"]</h2>
<hr />
<p>
    Je hebt aangegeven in te willen loggen met een herstelcode. Deze login zal niet onthouden worden totdat je
    een authenticatie app code hebt ingevoerd bij login of 2FA uitgeschakeld hebt en opnieuw hebt ingelogd.
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecoveryCode"></label>
                <input asp-for="RecoveryCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Inloggen</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}